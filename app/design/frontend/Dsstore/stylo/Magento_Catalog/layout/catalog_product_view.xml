<?xml version="1.0"?>
<page layout="1column" xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" xsi:noNamespaceSchemaLocation="urn:magento:framework:View/Layout/etc/page_configuration.xsd">
  <body>
    <referenceBlock name="view.addto.compare" remove="true"/>
    <referenceContainer name="product.info.stock.sku" remove="true"/>
    <referenceBlock name="product.attributes" remove="true" />
    <referenceBlock name="catalog.product.related" remove="true" />
    <referenceBlock name="product.info.details">                
      <block class="Magento\Catalog\Block\Product\View\Description" name="speciation-content" template="Magento_Catalog::product/view/speciation-content.phtml" group="detailed_info">
        <arguments>
          <argument name="at_call" xsi:type="string">getSpeciation</argument>
          <argument name="at_code" xsi:type="string">speciation</argument>
          <argument name="css_class" xsi:type="string">speciation</argument>
          <argument name="at_label" xsi:type="string">speciation</argument>
          <argument name="add_attribute" xsi:type="string">itemprop="speciation"</argument>
          <argument name="title" translate="true" xsi:type="string">Specification</argument>
          <argument name="sort_order" xsi:type="string">50</argument>
        </arguments>
      </block>
      <block class="Magento\Catalog\Block\Product\View\Description" name="productfaq" template="Magento_Catalog::product/view/speciation-content.phtml" group="detailed_info">
        <arguments>
          <argument name="at_call" xsi:type="string">getProductfaq</argument>
          <argument name="at_code" xsi:type="string">productfaq</argument>
          <argument name="css_class" xsi:type="string">productfaq</argument>
          <argument name="at_label" xsi:type="string">productfaq</argument>
          <argument name="add_attribute" xsi:type="string">itemprop="productfaq"</argument>
          <argument name="title" translate="true" xsi:type="string">FAQ</argument>
          <argument name="sort_order" xsi:type="string">55</argument>
        </arguments>
      </block>
    </referenceBlock>
    <move element="product.info.price" destination="product.info.options.wrapper.bottom" before="-" />
    <move element="product.info.review" destination="product.info.main" before="product.info.overview" />
    <move element="product.info.mailto" destination="product.info.main" before="product.info.price" />

    <referenceContainer name="product.info.main">  
      <block class="Magento\Catalog\Block\Product\View" name="verifiedby" before="-" template="Magento_Catalog::product/view/verifiedby.phtml" />
    </referenceContainer>
    <referenceContainer name="content">
      <block class="Magento\Cms\Block\Block" name="key_features" after="-">
          <arguments>
              <argument name="block_id" xsi:type="string">key_features</argument>
          </arguments>
      </block>
    </referenceContainer>
    <!-- <referenceContainer name="product.info.media">
      <block class="Magento\Cms\Block\Block" name="extra_image" after="-">
                  <arguments>
                      <argument name="block_id" xsi:type="string">detail_page_extra_galary</argument>
                  </arguments>
              </block>
    </referenceContainer> -->

    <referenceContainer name="product.info.media">  
      <block class="Magento\Catalog\Block\Product\View" name="extra_image" after="-" template="Magento_Catalog::product/view/magento_galary.phtml" />
    </referenceContainer>

  </body>
</page>