<?xml version="1.0" encoding="UTF-8"?>
<listing xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" xsi:noNamespaceSchemaLocation="urn:magento:module:Magento_Ui:etc/ui_configuration.xsd">
    <listingToolbar name="listing_top">
        <massaction name="listing_massaction" component="Magento_Ui/js/grid/tree-massactions">
            <action name="salesforce_attribute_remove">
                <settings>
                    <url path="salesforce/mass/removeOrderId"/>
                    <type>salesforce_attribute_remove</type>
                    <label translate="true">Clear Salesforce Order Ids</label>
                    <confirm>
                        <message translate="true">Are you sure to clear selected orders?</message>
                        <title translate="true">Clear items</title>
                    </confirm>
                </settings>
            </action>
        </massaction>
    </listingToolbar>
</listing>