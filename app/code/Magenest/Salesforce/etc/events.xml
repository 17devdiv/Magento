<?xml version="1.0"?>
<config	xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" xsi:noNamespaceSchemaLocation="urn:magento:framework:Event/etc/events.xsd">
    <event name="sales_order_save_commit_after">
        <observer name="salesforce_syncOrder" instance="Magenest\Salesforce\Observer\Order\Create"/>
    </event>
    <event name="admin_sales_order_address_update">
        <observer name="salesforce_updateSyncOrder" instance="Magenest\Salesforce\Observer\Order\UpdateAddress"/>
    </event>
    <event name="customer_save_after">
        <observer name="salesforce_save_customer" instance="Magenest\Salesforce\Observer\Customer\SyncDataAfterSaveCustomer" />
    </event>
</config>