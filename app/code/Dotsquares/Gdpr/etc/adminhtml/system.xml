<config xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" xsi:noNamespaceSchemaLocation="urn:magento:module:Magento_Config:etc/system_file.xsd">
    <system>
        <tab id="dotsquares" translate="label" sortOrder="40">
            <label>Dotsquares</label>
        </tab>
        <section id="cusotmerdelete" translate="label" type="text" sortOrder="200" showInDefault="1" showInWebsite="1" showInStore="1">
            <class>separator-top</class>
            <label>GDPR</label>
            <tab>dotsquares</tab>
            <resource>Dotsquares_Gdpr::config_deletecustomer</resource>
            <group id="gdprlaw" translate="label" type="text" sortOrder="5" showInDefault="1" showInWebsite="1" showInStore="1">
                <label>GDPR</label>
                <field id="gdpr_enable" translate="label comment" type="select" sortOrder="0"  showInDefault="1" showInWebsite="1" showInStore="1">
                    <label>Enable On Register Page </label>
                    <source_model>Magento\Config\Model\Config\Source\Yesno</source_model>
                </field>
				<field id="contact_enable" translate="label comment" type="select" sortOrder="0"  showInDefault="1" showInWebsite="1" showInStore="1">
                    <label>Enable On Contact Us Page</label>
                    <source_model>Magento\Config\Model\Config\Source\Yesno</source_model>
                </field>
				<field id="checkout_enable" translate="label comment" type="select" sortOrder="0"  showInDefault="1" showInWebsite="1" showInStore="1">
                    <label>Enable On Checkout Page</label>
                    <source_model>Magento\Config\Model\Config\Source\Yesno</source_model>
                </field>
                <field id="mailsystem" translate="label" type="select" sortOrder="350" showInDefault="1" showInWebsite="1" showInStore="0">
                    <label>Select Mailing System</label>
                    <source_model>Dotsquares\Gdpr\Model\Config\Source\Select</source_model>
                </field>
                <field id="gdprcheckobxmassage" translate="label" sortOrder="350" type="editor" showInDefault="1" showInWebsite="1" showInStore="0">
                    <label>Gdpr Policy</label>
					<comment>Please enter gdpr policy</comment>
                    <frontend_model>Dotsquares\Gdpr\Model\Config\Source\Editor</frontend_model>
                </field>
                <field id="websitecheckobxmassage" translate="label" sortOrder="350" type="editor" showInDefault="1" showInWebsite="1" showInStore="0">
                    <label>Website Policy</label>
					<comment>Please enter website policy</comment>
                    <frontend_model>Dotsquares\Gdpr\Model\Config\Source\Editor</frontend_model>
                </field>
            </group>
            <group id="cookies" translate="label" type="text" sortOrder="5" showInDefault="1" showInWebsite="1" showInStore="1">
                <label>Cookies</label>
                <field id="cookies_enable" translate="label comment" type="select" sortOrder="0"  showInDefault="1" showInWebsite="1" showInStore="1">
                    <label>Enable Cookies</label>
                    <source_model>Magento\Config\Model\Config\Source\Yesno</source_model>
                </field>
                <field id="cookies_msg" translate="label" sortOrder="350" type="editor" showInDefault="1" showInWebsite="1" showInStore="0">
                    <label>Cookies Massage</label>
					<comment>Please enter cookies massage</comment>
                    <frontend_model>Dotsquares\Gdpr\Model\Config\Source\Editor</frontend_model>
                </field>
                <field id="websitepolicymsg" translate="label" sortOrder="350" type="editor" showInDefault="1" showInWebsite="1" showInStore="0">
                    <label>Website Massage</label>
					<comment>Please enter Website policy</comment>
                    <frontend_model>Dotsquares\Gdpr\Model\Config\Source\Editor</frontend_model>
                </field>
            </group>
            <group id="general" translate="label" type="text" sortOrder="5" showInDefault="1" showInWebsite="1" showInStore="1">
                <label>Delete Customer Data</label>
                <field id="deletecusotmer_enable" translate="label comment" type="select" sortOrder="0"  showInDefault="1" showInWebsite="1" showInStore="1">
                    <label>Enable</label>
                    <source_model>Magento\Config\Model\Config\Source\Yesno</source_model>
                </field>
                <field id="willcustomerdata" translate="label" sortOrder="6" showInDefault="1" showInWebsite="1" showInStore="0">
                    <label>Choose options to delete customer's Data</label>
                    <frontend_model>Dotsquares\Gdpr\Block\System\Config\Checkbox</frontend_model>
                    <depends>
                        <field id="deletecusotmer_enable">1</field>
                    </depends>
                </field>
				<field id="customer_name" translate="label comment" type="text" sortOrder="7"  showInDefault="1" showInWebsite="1" showInStore="1">
                    <label><![CDATA[Please enter customer name during <br /> order anonymization]]></label>
					<comment>Default we use timestamp for customer name.</comment>
                </field>
				<field id="customer_email" translate="label comment" type="text" sortOrder="8"  showInDefault="1" showInWebsite="1" showInStore="1">
				    <label>Please enter customer email address during order anonymization</label>
					<validate>validate-email</validate>
					<comment>Default we use timestamp for customer email address.</comment>
                </field>
				<field id="customer_tel" translate="label comment" type="text" sortOrder="9"  showInDefault="1" showInWebsite="1" showInStore="1">
                    <label><![CDATA[Please enter customer telephone <br /> number during order anonymization]]></label>
					<validate>validate-number</validate>
					<comment>Default we use timestamp for customer telephone number.</comment>
                </field>
            </group>
        </section>
    </system>
</config>