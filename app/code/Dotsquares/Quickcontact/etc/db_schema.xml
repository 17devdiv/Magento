<schema xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" xsi:noNamespaceSchemaLocation="urn:magento:framework:Setup/Declaration/Schema/etc/schema.xsd">
    <table name="dotsquares_quickcontact_items" resource="default" engine="innodb" comment="QuickContact">
       <column xsi:type="int" name="id"  unsigned="true" nullable="false" identity="true" comment="Id"/>
       <column xsi:type="text" name="name" nullable="true"  comment="name"/>
       <column xsi:type="text" name="email" nullable="true"  comment="email"/>
	   <column xsi:type="text" name="phone" nullable="true"  comment="phone"/>
       <column xsi:type="text" name="message" nullable="true"  comment="message"/>
	   <constraint xsi:type="primary" referenceId="PRIMARY">
            <column name="id"/>
        </constraint>       
    </table>
</schema>
