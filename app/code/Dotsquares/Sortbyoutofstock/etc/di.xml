    </type>

    <type name="Magento\Catalog\Model\ResourceModel\Product\Collection\ProductLimitation">
        <plugin name="prevent_price_sort" type="Dotsquares\Sortbyoutofstock\Plugin\Catalog\Model\ResourceModel\Product\Collection\ProductLimitation\PreventPriceSortPlugin" />
