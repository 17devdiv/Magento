                type="Dotsquares\Sortbyoutofstock\Plugin\Model\Adapter\BatchDataMapper\ProductDataMapperPlugin"/>
    </type>

    <type name="Magento\Elasticsearch\Model\ResourceModel\Fulltext\Collection\SearchResultApplier">
