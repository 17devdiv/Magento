<config xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" xsi:noNamespaceSchemaLocation="urn:magento:module:Magento_Config:etc/system_file.xsd">
    <system>
	<tab id="dotsquaresid" translate="label" sortOrder="10">
            <label>Dotsquares Extensions</label>
        </tab>
        <section id="seo" translate="label" type="text" sortOrder="550" showInDefault="1" showInWebsite="1" showInStore="1">
            
			<class>separator-top</class>
            <label>HTML Sitemap</label>
            <tab>dotsquaresid</tab>
            <resource>Dotsquares_Sitemap::parent</resource>

			
			
			
            <group id="html_sitemap" translate="label" type="text" sortOrder="60" showInDefault="1" showInWebsite="1" showInStore="1" canRestore="1">
                <label>General</label>
				
                <field id="id11" translate="label comment" type="select" sortOrder="10" showInDefault="1" showInWebsite="1" showInStore="1" canRestore="1">
                    <label>Enable Sitemap</label>
                    <source_model>Magento\Config\Model\Config\Source\Yesno</source_model>
                </field>

                <field id="id12" translate="label comment" type="text" sortOrder="21" showInDefault="1" showInWebsite="1" showInStore="1" canRestore="1">
                    <label>SiteMap Page Title</label>
                    
                </field>


                <field id="id13" translate="label comment" type="text" sortOrder="22" showInDefault="1" showInWebsite="1" showInStore="1" canRestore="1">
                    <label>SiteMap Page Meta Title</label>
                    
                </field> 

                 </group>

                 <group id="html_sitemap1" translate="label" type="text" sortOrder="61" showInDefault="1" showInWebsite="1" showInStore="1" canRestore="1">
                <label>CMS Link List</label>

                <field id="id125" translate="label comment" type="text" sortOrder="21" showInDefault="1" showInWebsite="1" showInStore="1" canRestore="1">
                    <label>Title of "CMS List"</label>
                    
                </field>
				
                <field id="page" translate="label comment" type="select" sortOrder="20" showInDefault="1" showInWebsite="1" showInStore="1" canRestore="1">
                    <label>Show CMS Pages</label>
                    <source_model>Magento\Config\Model\Config\Source\Yesno</source_model>
                    <depends>
                        <field id="id11">1</field>
                    </depends>
                </field>

                <field id="id17" translate="label comment" type="multiselect" sortOrder="26" showInDefault="1" showInWebsite="1" showInStore="1" canRestore="1">
                    <label>User Links</label>
                    <source_model>Dotsquares\Sitemap\Model\System\Config\Source\Userlinks</source_model>
                    <depends>
                        <field id="id11">1</field>
                        
                    </depends>
                </field> 


                  </group>

                  <group id="html_sitemap2" translate="label" type="text" sortOrder="62" showInDefault="1" showInWebsite="1" showInStore="1" canRestore="1">
                <label>Category</label>


                <field id="id16" translate="label comment" type="select" sortOrder="25" showInDefault="1" showInWebsite="1" showInStore="1" canRestore="1">
                    <label>Show Category</label>
                    <source_model>Magento\Config\Model\Config\Source\Yesno</source_model>
                    <comment>if "Show Category Product Dependent" set to NO</comment>
                     <depends>
                        <field id="id11">1</field>
                    </depends>
                </field>

                 <field id="id126" translate="label comment" type="text" sortOrder="21" showInDefault="1" showInWebsite="1" showInStore="1" canRestore="1">
                    <label>Title of Category List</label>
                </field>
                


                  <field id="id14" translate="label comment" type="select" sortOrder="23" showInDefault="1" showInWebsite="1" showInStore="1" canRestore="1">
                    <label>Show Category Product Dependent</label>
                    <source_model>Magento\Config\Model\Config\Source\Yesno</source_model>
                </field>

                </group>

                <group id="html_sitemap3" translate="label" type="text" sortOrder="63" showInDefault="1" showInWebsite="1" showInStore="1" canRestore="1">
                <label>Product</label>
				

                <field id="id15" translate="label comment" type="select" sortOrder="24" showInDefault="1" showInWebsite="1" showInStore="1" canRestore="1">
                    <label>Show Products</label>
                    <source_model>Magento\Config\Model\Config\Source\Yesno</source_model>
                    <comment>if "Show Category Product Dependent" set to NO</comment>
                     <depends>
                        <field id="id11">1</field>
                    </depends>
                </field> 

                 <field id="id127" translate="label comment" type="text" sortOrder="21" showInDefault="1" showInWebsite="1" showInStore="1" canRestore="1">
                    <label>Title of Product List</label>
                    
                </field>
                </group>

			
				 <group id="html_sitemap4" translate="label" type="text" sortOrder="64" showInDefault="1" showInWebsite="1" showInStore="1" canRestore="1">
                <label>Additional Links</label>


				<field id="id128" translate="label comment" type="text" sortOrder="21" showInDefault="1" showInWebsite="1" showInStore="1" canRestore="1">
                    <label>Title of Additional Link List</label>
                    
                </field>

				
                <field id="additional_links" translate="label comment" type="textarea" sortOrder="39" showInDefault="1" showInWebsite="1" showInStore="1" canRestore="1">
                    <label>Other Links</label>
                    <comment>
                        <![CDATA[
                          - A comma-delimited list of links and link labels to append to sitemap.</br>
                          - One link per line.</br>
                         <b>Example:</b></br>
                         <div style="margin-left: 30px; font-size: 12px">
                            https://www.dotsquares.com/,Dotsquares</br>
                            https://magento.com/,Magento
                         </div>
                         ]]>
                    </comment>
                    <depends>
                        <field id="id11">1</field>
                        
                    </depends>
                    
                </field>
				
				
				
				
                
            </group>
        </section>
    </system>
</config>
