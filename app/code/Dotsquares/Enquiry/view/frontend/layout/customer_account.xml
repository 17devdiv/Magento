<page xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" xsi:noNamespaceSchemaLocation="urn:magento:framework:View/Layout/etc/page_configuration.xsd">
    <body>
		<referenceBlock name="page.main.title">
            <action method="setPageTitle">
                <argument translate="true" name="Order Enquiry" xsi:type="string">Order Enquiry</argument>
            </action>
		</referenceBlock>
        <referenceBlock name="customer_account_navigation">
            <block class="Magento\Framework\View\Element\Html\Link\Current" name="customer-account-navigation-enquiry" ifconfig="gernal_section_ds/general/dropdown_enable">
                <arguments>
                    <argument name="path" xsi:type="string">enquiry/customer/index</argument>
                    <argument name="label" xsi:type="string">Order Enquiry</argument>
                </arguments>
            </block>
        </referenceBlock>
    </body>
</page>

